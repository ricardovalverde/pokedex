<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/type_ice"
    android:orientation="vertical">

<LinearLayout
    android:id="@+id/container_categorie_pokemon"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/brandongrotesque"
        android:text="Categories"
        android:textColor="@color/text_gray_dark"
        android:layout_marginStart="25dp"
        android:textAllCaps="true"
        android:textSize="30sp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#00000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background_poke"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:padding="15dp"
                android:src="@drawable/clefa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/brandongrotesque"
                android:padding="25dp"
                android:textColor="@color/light_white"
                android:text="Pokémons"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_expand_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:background="#00000000"
                android:fontFamily="@font/brandongrotesque"
                android:padding="20dp"
                android:text="Expand All" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#00000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background_poke"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:padding="15dp"
                android:src="@drawable/gengar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/brandongrotesque"
                android:padding="25dp"
                android:text="Pokémons"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:text="Expand All" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#00000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background_poke"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:padding="15dp"
                android:src="@drawable/gengar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/brandongrotesque"
                android:padding="25dp"
                android:text="Pokémons"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:text="Expand All" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


</LinearLayout>