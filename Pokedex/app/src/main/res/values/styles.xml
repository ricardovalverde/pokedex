<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardViewRight">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="cardViewLeft">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="cardViewPokemons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="imageViewMainCardIcon">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="textViewMainCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>